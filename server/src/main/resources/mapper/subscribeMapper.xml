<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.feelog.mapper.SubscribeMapper">

    <insert id="subscribe" parameterType="com.app.feelog.domain.dto.SubscribeDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tbl_subscribe (member_id, channel_id)
        VALUES (#{memberId}, #{channelId})
    </insert>

    <select id="isSubscribed" resultType="boolean">
        SELECT EXISTS (
            SELECT 1
            FROM tbl_subscribe
            WHERE member_id = #{memberId}
              AND channel_id = #{channelId}
        )
    </select>

    <delete id="unsubscribe">
        DELETE FROM tbl_subscribe
        WHERE member_id = #{memberId}
          AND channel_id = #{channelId}
    </delete>


</mapper>